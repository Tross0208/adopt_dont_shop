<section id="App_info">
	<h1>Application Info</h1>
	<p><%= @application.name %></p>
	<p><%= @application.street_address%>, <%= @application.city %>, <%= @application.state %> <%= @application.zipcode %></p>
	<p>Application description: <%=@application.description%></p>
	<p>Application stauts: <%=@application.status%></p>
</section>

	<% if @application.pets_added != [] %>
		<% @application.pets_added.each do |pet| %>
		  <section id="pets_added-<%=pet.id%>">
		  	<h2>Pets Added:</h2>
			<p><%= pet.name %></p> 
			<p><%= pet.age %></p> 
			<p><%= pet.breed %></p> 

			<% if @application.application_pet_status(pet.id) %>
				<h4>Application for <%=pet.name%> <%=@application.application_pet_status(pet.id)%></h4>
			<% else %>
				<p><%= button_to "Approve application for #{pet.name}", "/admin/applications/#{@application.id}/pets", method: :patch, params: {:pet_id => pet.id, :application_id => @application.id, :status => 'approved'}%></p>
				<p><%= button_to "Reject application for #{pet.name}", "/admin/applications/#{@application.id}/pets", method: :patch, params: {:pet_id => pet.id, :application_id => @application.id, :status => 'rejected'}%></p>
			<% end %>

		  </section>
		<% end %>
	<% end %>



		


